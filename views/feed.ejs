    <% for(let i=0; i < posts.length; i++) {%>
        <div class="p-12 feedContentCard grid h-auto bg-base-300 mx-auto place-items-center">
            <div class="w-full place-items-left">
                <% if(posts[i].typeOfPost==='Sell' ) { %>
                    <span class="sellTag tag text-left">
                        <%=posts[i].typeOfPost %>
                    </span>
                    <%} else if(posts[i].typeOfPost==='Buy' ) {%>
                        <span class="buyTag tag text-left">
                            <%=posts[i].typeOfPost %>
                        </span>
                        <%} else if(posts[i].typeOfPost==='Trade' ) {%>
                            <span class="tradeTag tag text-left">
                                <%=posts[i].typeOfPost %>
                            </span>
                            <%} else if(posts[i].typeOfPost==='Looking For Services' ) {%>
                                <span class="servicesTag tag text-left">
                                    <%=posts[i].typeOfPost %>
                                </span>
                                <%} %>

                                    <h3 class="text-left">
                                        <%= posts[i].title%>
                                    </h3>
                                    <p>
                                        <%= posts[i].caption%>
                                    </p>
            </div>
            <a href="/post/<%= posts[i]._id%>">
                <img class="" src="<%= posts[i].image%>" alt="">
            </a>
        </div>
        <div class="gapper"></div>
        <% } %>


